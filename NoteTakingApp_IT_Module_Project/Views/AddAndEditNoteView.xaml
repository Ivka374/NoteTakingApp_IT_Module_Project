<Window x:Class="NoteTakingApp_IT_Module_Project.Views.AddAndEditNoteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteTakingApp_IT_Module_Project.Views"
        mc:Ignorable="d"
        Height="400" Width="500"
        x:Name="NoteView"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border>
        
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                <GradientStop Color="CornflowerBlue" Offset="0.0"/>
                <GradientStop Color="MidnightBlue" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border.Clip>
            <RectangleGeometry RadiusX="20" RadiusY="20"
                               Rect="0,0,500,400"/>
        </Border.Clip>

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            
            
            <!-- Column 0 -->
            <TextBlock Grid.ColumnSpan="1"
                           Text="{Binding Tiltle}"
                           Foreground="White"
                           FontSize="36"
                           Margin="20,10,10,0"/>
                <RibbonSeparator Margin="20,10,10,0" 
                                 Grid.ColumnSpan="2" Grid.Row="1"/>
                <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                           Text="{Binding Content}"
                           Foreground="White"
                           FontSize="18"
                           Margin="20,10,10,0"
                           TextWrapping="WrapWithOverflow"/>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2"
                            Orientation="Horizontal" 
                            Margin="20,10,10,0">
                <!-- The tags will be here -->
            </StackPanel>
            
            <!-- Column 1 -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="10,10,20,0">

                <!-- Fvourited Note Button -->
                <local:ImageSwappingToggleButton
                    IsChecked="False"
                    IsEnabled="True"
                    EnabledChecked="/Images/whiteStar.png"
                    EnabledUnckecked="/Images/whiteStar.png"
                    DisabledUnchecked="/Images/purpleStar.png"/>

                <!-- Settings Menu Button -->
                <Button Background="Transparent"
                        VerticalAlignment="Center"
                        Click="Button_Click"
                        x:Name="NoteSettingsButton">
                    <Image Source="/Images/verticalMenu.png"
                           Stretch="None"/>

                    <Button.ContextMenu>
                        <ContextMenu x:Name="NoteSettings" 
                                     PlacementRectangle=
                                     "{Binding RelativeSource=
                            {RelativeSource Self}}">
                            <MenuItem Header="Add Score" x:Name="AddScoreOption"/>
                            <MenuItem Header="Cahnge Colour" x:Name="ChangeColourOption"/>
                            <MenuItem Header="Delete" x:Name="DeleteOption"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                    <Button.Triggers>
                        <EventTrigger SourceName="NoteSettingsButton" 
                                      RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ObjectAnimationUsingKeyFrames 
                                        Storyboard.TargetName="NoteSettings" 
                                        Storyboard.TargetProperty=
                                        "(ContextMenu.IsOpen)">
                                        <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                            <DiscreteObjectKeyFrame.Value>
                                                <sys:Boolean>True</sys:Boolean>
                                            </DiscreteObjectKeyFrame.Value>
                                        </DiscreteObjectKeyFrame>
                                    </ObjectAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>

                </Button>
                
            </StackPanel>
            
        </Grid>
    </Border>
</Window>
